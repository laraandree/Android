<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.andrelara.calculadorasimples.MainActivity"
    android:padding="0dp"
    android:background="#0ecece">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/visor"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:autoText="false"
        android:background="#E3F2FD"
        android:gravity="bottom|right"
        android:textSize="70dp"
        android:text="0"
        android:textColor="#000000"
        android:nestedScrollingEnabled="true"
        android:maxLines="2"
        android:maxLength="17" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:id="@+id/btn7"
        android:layout_below="@+id/visor"
        android:layout_alignLeft="@+id/visor"
        android:layout_alignStart="@+id/visor"
        android:layout_margin="0dp"
        android:textColor="#bfbfbf"
        android:background="#AFB42B"
        android:textSize="30dp"
        android:onClick="onClickNumero" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:id="@+id/btn8"
        android:textColor="#bfbfbf"
        android:background="#AFB42B"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:onClick="onClickNumero" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:id="@+id/btn9"
        android:textColor="#bfbfbf"
        android:background="#AFB42B"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:onClick="onClickNumero" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="%"
        android:id="@+id/btnDividir"
        android:textColor="#bfbfbf"
        android:background="#AFB42B"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:onClick="onClickOperador" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:id="@+id/btn4"
        android:textColor="#bfbfbf"
        android:background="#AFB42B"
        android:textSize="30dp"
        android:layout_below="@+id/btn7"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignStart="@+id/btn7"
        android:onClick="onClickNumero" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:id="@+id/btn1"
        android:textColor="#bfbfbf"
        android:background="#AFB42B"
        android:textSize="30dp"
        android:layout_below="@+id/btn4"
        android:layout_alignRight="@+id/btn4"
        android:layout_alignEnd="@+id/btn4"
        android:onClick="onClickNumero" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="C"
        android:id="@+id/btnClear"
        android:textColor="#bfbfbf"
        android:background="#AFB42B"
        android:textSize="30dp"
        android:layout_below="@+id/btn1"
        android:layout_alignRight="@+id/btn1"
        android:layout_alignEnd="@+id/btn1"
        android:onClick="onClickClear" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:id="@+id/btn5"
        android:textColor="#bfbfbf"
        android:background="#AFB42B"
        android:textSize="30dp"
        android:layout_above="@+id/btn1"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4"
        android:onClick="onClickNumero" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:id="@+id/btn2"
        android:textColor="#bfbfbf"
        android:background="#AFB42B"
        android:textSize="30dp"
        android:layout_alignTop="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:onClick="onClickNumero" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="0"
        android:id="@+id/btn0"
        android:textColor="#bfbfbf"
        android:background="#AFB42B"
        android:textSize="30dp"
        android:layout_alignTop="@+id/btnClear"
        android:layout_toLeftOf="@+id/btn9"
        android:layout_toStartOf="@+id/btn9"
        android:onClick="onClickNumero" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:id="@+id/btn6"
        android:textColor="#bfbfbf"
        android:background="#AFB42B"
        android:textSize="30dp"
        android:layout_above="@+id/btn2"
        android:layout_toLeftOf="@+id/btnDividir"
        android:layout_toStartOf="@+id/btnDividir"
        android:onClick="onClickNumero" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:id="@+id/btn3"
        android:textColor="#bfbfbf"
        android:background="#AFB42B"
        android:textSize="30dp"
        android:layout_alignTop="@+id/btn2"
        android:layout_toRightOf="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:onClick="onClickNumero" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="="
        android:id="@+id/btnIgual"
        android:textColor="#bfbfbf"
        android:background="#AFB42B"
        android:textSize="30dp"
        android:layout_alignTop="@+id/btn0"
        android:layout_toLeftOf="@+id/btnDividir"
        android:layout_toStartOf="@+id/btnDividir"
        android:onClick="onClickIgual" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="x"
        android:id="@+id/btnMultiplicar"
        android:textColor="#bfbfbf"
        android:background="#AFB42B"
        android:textSize="30dp"
        android:layout_above="@+id/btn3"
        android:layout_alignLeft="@+id/btnDividir"
        android:layout_alignStart="@+id/btnDividir"
        android:onClick="onClickOperador" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="+"
        android:id="@+id/btnSoma"
        android:textColor="#bfbfbf"
        android:background="#AFB42B"
        android:textSize="30dp"
        android:onClick="onClickOperador"
        android:layout_alignTop="@+id/btnIgual"
        android:layout_toRightOf="@+id/btnIgual"
        android:layout_toEndOf="@+id/btnIgual" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="-"
        android:id="@+id/btnMenos"
        android:textColor="#bfbfbf"
        android:background="#AFB42B"
        android:textSize="30dp"
        android:onClick="onClickOperador"
        android:layout_alignTop="@+id/btn3"
        android:layout_toRightOf="@+id/btn3"
        android:layout_toEndOf="@+id/btn3" />

</RelativeLayout>
